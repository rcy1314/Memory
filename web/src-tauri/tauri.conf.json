{
  "productName": "Memory-Photo-Album",
  "version": "2.0.0",
  "identifier": "com.memory.app",
  "build": {
    "beforeDevCommand": "vite --mode tauri",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Memory Photo Album",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../run.py",
      "../../app/**/*",
      "../../requirements.txt",
      "../../migrations/**/*",
      "../../uvicorn_loggin_config.json"
    ],
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "http": null
  }
}