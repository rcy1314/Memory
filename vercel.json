{
  "version": 2,

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/run.py"
    }
  ],
  "redirects": [
    {
      "source": "/((?!api|_next|static|favicon.ico).*)",
      "destination": "/index.html",
      "statusCode": 200
    }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "buildCommand": "cd web && npm install && npm run build && cd .. && pip install -r requirements.txt",
  "outputDirectory": "web/dist"
}